# OpenAI API key for AI-powered part suggestions
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# DATABASE (Neon Postgres)
# ===========================================
# Get these from Neon Dashboard > Your Project > Connection Details
DATABASE_URL=postgresql://user:password@host/database?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://user:password@host/database?sslmode=require

# ===========================================
# AUTH
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# EMAIL (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@precisionbom.com

# ===========================================
# PART PROVIDERS (configure at least one)
# ===========================================

# Octopart/Nexar - OAuth 2.0 (https://nexar.com/api)
# Aggregates: DigiKey, Mouser, Arrow, Newark, etc.
OCTOPART_CLIENT_ID=your-client-id
OCTOPART_CLIENT_SECRET=your-client-secret

# Mouser - API Key (https://www.mouser.com/api-hub/)
MOUSER_API_KEY=your-mouser-api-key

# DigiKey - OAuth 2.0 (https://developer.digikey.com/)
DIGIKEY_CLIENT_ID=your-digikey-client-id
DIGIKEY_CLIENT_SECRET=your-digikey-client-secret
